<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.DrugCarrierActivity">

    <RelativeLayout
        android:id="@+id/reLayout_drug_info"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_0065ff"
        android:paddingHorizontal="@dimen/dimen_24dp">

        <ImageView
            android:id="@+id/img_drug_info_return"
            android:layout_width="@dimen/dimen_12dp"
            android:layout_height="@dimen/dimen_18dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_white_left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/home_medication_reminder"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/size_18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line_scan_drugs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:src="@mipmap/icon_drug_entry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:text="@string/scan_drugs"
            android:textColor="@color/color_112950"
            android:textSize="@dimen/size_24sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:background="@color/color_f6f6f6" />

    <LinearLayout
        android:id="@+id/line_drug_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:src="@mipmap/icon_medication_reminder" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:text="@string/drug_list"
            android:textColor="@color/color_112950"
            android:textSize="@dimen/size_24sp" />
    </LinearLayout>
</LinearLayout>