<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@drawable/shape_emergency_contact_list_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dimen_14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/emergency_contact"
            android:textColor="@color/color_112950"
            android:textSize="@dimen/size_19sp" />

        <ImageView
            android:id="@+id/safety_detail_close"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_emergency_contact_list_close" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_5dp"
        android:background="@color/color_e5e5e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_14dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:text="@string/emergency_contact_one"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/size_20sp" />

        <TextView
            android:id="@+id/tv_emergency_contact_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_emergency_contact_list_edittext_bg"
            android:hint="@string/emergency_contact_two"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dimen_10dp"
            android:paddingVertical="@dimen/dimen_15dp"
            android:textColor="@color/color_4d4d4d"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/size_24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text="@string/my_contact_us_phone_number_reminder"
            android:textColor="@color/color_dddddd"
            android:textSize="@dimen/size_18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_14dp"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:text="@string/emergency_contact_two"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/size_20sp" />

        <TextView
            android:id="@+id/tv_emergency_contact_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_emergency_contact_list_edittext_bg"
            android:hint="@string/emergency_contact_two"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dimen_10dp"
            android:paddingVertical="@dimen/dimen_15dp"
            android:textColor="@color/color_4d4d4d"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/size_24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text="@string/my_contact_us_phone_number_reminder"
            android:textColor="@color/color_dddddd"
            android:textSize="@dimen/size_18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_reset_emergency_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_14dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:background="@drawable/shape_big_btn"
        android:gravity="center"
        android:paddingVertical="@dimen/size_12sp"
        android:text="@string/reset_emergency_contacts"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/size_16sp" />
</LinearLayout>